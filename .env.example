# Application environment
ENVIRONMENT=dev
LOG_LEVEL=INFO

# NVIDIA NIM configuration
NIM_LLM_ENDPOINT=http://nim-llm:8000/v1
NIM_EMBEDDING_ENDPOINT=http://nim-embedding:8000/v1
NIM_LLM_API_KEY=change-me
NIM_EMBEDDING_API_KEY=change-me

# AWS/OpenSearch settings (required for staging/prod)
AWS_REGION=us-west-2
OPENSEARCH_ENDPOINT=https://search-your-domain.region.es.amazonaws.com

# API rate limiting
API_RATE_LIMITS__REQUESTS_PER_MINUTE=120
API_RATE_LIMITS__BURST_SIZE=25
