apiVersion: v1
kind: Secret
metadata:
  name: audra-rad-secrets
  namespace: audra-rad
type: Opaque
stringData:
  # NVIDIA NIM API Keys
  nim-api-key: "YOUR_NIM_API_KEY_HERE"

  # AWS Credentials (if not using IRSA)
  aws-access-key-id: "YOUR_AWS_ACCESS_KEY"
  aws-secret-access-key: "YOUR_AWS_SECRET_KEY"

  # OpenSearch
  opensearch-endpoint: "https://your-opensearch-domain.region.es.amazonaws.com"

  # Application secrets
  api-secret-key: "generate-random-secret-here"

---
apiVersion: v1
kind: ConfigMap
metadata:
  name: audra-rad-config
  namespace: audra-rad
data:
  LOG_LEVEL: "INFO"
  NIM_LLM_ENDPOINT: "http://nim-llm-service:8000"
  NIM_EMBEDDING_ENDPOINT: "http://nim-embedding-service:8001"
  AWS_REGION: "us-east-1"
  API_HOST: "0.0.0.0"
  API_PORT: "8000"
